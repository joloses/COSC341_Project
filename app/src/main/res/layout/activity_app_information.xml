<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".App_Information">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="133dp"
        android:text="About the App"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="380dp"
        android:layout_height="109dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:lineSpacingExtra="4sp"
        android:text="TeamUp is an app that that can *actively* help you make friends in your local area! Our app is designed to match you with users based on a shared interest in certain physical activities and sports. Below are four main goals that can help you accomplish this task:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:lineSpacingExtra="4sp"
        android:text="1. You can create a profile that showcases you! Input who you are, your interesests, and what you're looking for!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="380dp"
        android:layout_height="64dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:lineSpacingExtra="4sp"
        android:text="2. You can edit your preferences to further improve your search! Change distance, age range, gender, and level of play that fits your needs!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="380dp"
        android:layout_height="43dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:text="3. You can see other users and expand on their profiles. See what they are interested in and look for that match!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="380dp"
        android:layout_height="43dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:lineSpacingExtra="4sp"
        android:text="4. You can chat with matched users using our integrated chat box. Plan events and activities and make new friends!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="380dp"
        android:layout_height="51dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:lineSpacingExtra="4sp"
        android:text="To get in contact with us, you can inquire at TeamUpApp@gmail.com"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="106dp"
        android:backgroundTint="#0000FE"
        android:onClick="backToSetting"
        android:text="Back to Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>